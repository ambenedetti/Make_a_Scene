    <div class="product-show-booking p-2">
      <div class="booking-form-show-page" style="width: 300px; margin: 0 auto;">
        <h3>Book this <%= product.title %></h3>

        <%= simple_form_for [product, booking] do |f| %>
          <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
          <%= f.input :total_cost, input_html: {id: "product-show-total-cost"} %>
          <%= f.button :submit, "Book now", data: {confirm: "Are you sure you want to confirm the booking for #{product.title}?"}, class: "btn pink-button m-2 pr-2 pl-2" %>
        <% end %>
      </div>
    </div>

<div class="form">
  <%= simple_form_for @booking do |f| %>
  <% if @booking.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <%= f.button :submit, class: 'submit-button'  %>
    <% end %>
      <%= link_to 'Back to Bookings', bookings_path, class: 'going-back', style: "margin: 20px;
  color: black;" %>
    </div>
</div>

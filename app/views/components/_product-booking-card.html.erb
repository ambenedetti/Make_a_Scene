<% product.bookings.each do |booking| %>
  <div class="card-product m-2">
    <img src="<%= booking.product.images[0].data %>" />
    <div class="card-product-infos">
      <h3><em>Booking id:</em><%= booking.id %></h3>
      <p><%= booking.user.first_name %><%= booking.user.last_name%>| <%= booking.start_date %><%= booking.end_date %> | <%= booking.total_cost %></p>
      <p class="nav-item dropdown">
        <p class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Status: Pending</p>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Accept", "#", class: "dropdown-item" %>
            <%= link_to "Cancel", "#", class: "dropdown-item" %>
        </div>
      </p>
    </div>
  </div>
<% end %>


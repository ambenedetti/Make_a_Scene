<div class="wrapper-product-show">

  <div class="product-image-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @product.images[0].data %>')">
  </div>

  <div class="product-show-card d-flex">
    <div class="product-show-description-location-card p-2 flex-grow-1">
      <h1><%= @product.title %></h1>
      <p>Category: <span style="color: pink;"> <strong><%= @product.category.upcase %></strong></span>  Style: <span style="color: pink;"><strong><%= @product.style.upcase %></strong></span>
          -      Posted by <%= link_to products_path do %>
          <%= @product.user.first_name.upcase%> <%= @product.user.last_name.upcase %>
          <% end %>
        </p>
      <div class="product-show-description">
        <p><%= @product.description %></p>
        <p><strong>Price per day: <span style="color: gray;"id="product-show-daily-cost" ><%= @product.daily_cost %></span>â‚¬</strong></p>
      </div>
      <div class="product-show-location">
        <h3>Location</h3>
      </div>
    </div>
    <div class="product-show-booking p-2">
      <div class="booking-form-show-page" style="width: 300px; margin: 0 auto;">
        <h3>Book this <%= @product.title %></h3>

        <%= simple_form_for [@product, @booking] do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :total_cost, input_html: {id: "product-show-total-cost"} %>
          <%= f.button :submit, "Book now", class: "btn pink-button m-2 pr-2 pl-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

